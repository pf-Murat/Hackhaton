        <item name="android:scrollbars">none</item>
    </style>


    <style name="AppTheme.MainButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/main_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/main_button_margin</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
    </style>

    <style name="AppTheme.MainButton_theme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/global_white</item>
        <item name="colorAccent">@color/sky_50</item>
    </style>

    <style name="AppTheme.RaisedButtonCandy" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/global_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:theme">@style/AppTheme.Button.CandyOverlay</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/grey_2</item>
        <item name="colorAccent">@color/grey_2</item>
    </style>



    <style name="AppTheme.Button.CandyOverlay" parent="Widget.AppCompat.Button.Colored">
        <item name="colorAccent">@color/sky_50</item>
    </style>

    <style name="SeparatorDebugView">
