        <item name="hintTextColor">@color/grey_1</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="colorControlActivated">@color/sky_50</item>
        <item name="errorTextColor">@color/error_100</item>
        <item name="android:theme">@style/exampleCursor</item>
        <item name="colorOnError">@color/error_100</item>
        <item name="colorError">@color/error_100</item>
        <item name="android:textAppearance">@style/body</item>
    </style>

