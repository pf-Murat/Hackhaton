<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hackhaton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="sliderStyle">@style/Widget.App.Slider</item>
        <item name="chipStyle">@style/ChipCustomStyle</item>
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="Theme.Hackhaton.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/button_blue</item>
        <item name="colorOnPrimary">@color/button_blue</item>
        <item name="colorOnSurface">@color/button_blue</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">#B35D25</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_blue</item>
        <item name="android:background">@drawable/bg_filter_button</item>
    </style>

    <style name="Button.Blue" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_filter_button_blue</item>
    </style>

    <style name="Button.SmallRadius" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_blue</item>
        <item name="android:background">@drawable/bg_filter_button_blue_2dp</item>
    </style>

    <style name="Button.Label" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_blue</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ChipCustomStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@drawable/ic_checked</item>
        <item name="chipIcon">@drawable/ic_unchecked</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="chipBackgroundColor">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:checkable">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textStartPadding">4dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="iconStartPadding">4dp</item>
        <item name="android:layout_margin">12dp</item>

    </style>

</resources>